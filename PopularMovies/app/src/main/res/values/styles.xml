<resources>
	
	<!-- Base application theme. -->
	<style name="AppTheme"
		   parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	
	<style name="titleTextStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/title_height</item>
		<item name="android:background">@color/colorSecondaryDark</item>
		<item name="android:gravity">start|center</item>
		<item name="android:paddingLeft">@dimen/padding_16</item>
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="thumbnailStyle">
		<item name="android:layout_width">@dimen/details_image_width</item>
		<item name="android:layout_height">@dimen/details_image_height</item>
		<item name="android:layout_marginLeft">@dimen/padding_16</item>
		<item name="android:layout_marginTop">@dimen/padding_8</item>
		<item name="android:adjustViewBounds">true</item>
	</style>
	
	<style name="dateTextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/padding_16</item>
		<item name="android:layout_marginTop">@dimen/padding_8</item>
		<item name="android:textColor">@color/colorGrey</item>
		<item name="android:textSize">22sp</item>
	</style>
	
	<!--<style name="durationTextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/padding_16</item>
		<item name="android:textColor">@color/colorDarkGrey</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold|italic</item>
	</style>-->
	
	<style name="ratingsTextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/padding_16</item>
		<item name="android:layout_marginTop">@dimen/padding_8</item>
		<item name="android:textColor">@color/colorBlack</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="overviewTextStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/padding_8</item>
		<item name="android:paddingLeft">@dimen/padding_16</item>
		<item name="android:paddingRight">@dimen/padding_16</item>
		<item name="android:paddingTop">@dimen/padding_8</item>
		<item name="android:paddingBottom">@dimen/padding_8</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/colorDarkGrey</item>
	</style>

</resources>
